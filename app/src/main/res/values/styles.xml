<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="colorBackgroundFloating">@android:color/white</item>
        <item name="android:supportsRtl">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/andalus_regular</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:direction">right_to_left</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Theme.AppCompat.Light.NoActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <color name="couleurLawh">#FFE499</color>
    <color name="couleurFont">#F1F5FB</color>
</resources>
